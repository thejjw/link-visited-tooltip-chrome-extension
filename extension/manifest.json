{
    "manifest_version": 3,
    "name": "Link Visited Tooltip",
    "version": "1.0.0",
    "description": "Shows a tooltip on link hover indicating when a link was last visited.",
    "author": "@thejjw",
    "icons": {
        "16": "icons/icon16.png",
        "32": "icons/icon32.png",
        "48": "icons/icon48.png",
        "128": "icons/icon128.png"
    },
    "permissions": [
        "history"
    ],
    "host_permissions": [
        "<all_urls>"
    ],
    "background": {
        "service_worker": "background.js"
    },
    "content_scripts": [
        {
            "matches": ["<all_urls>"],
            "js": ["content.js"],
            "run_at": "document_end",
            "match_about_blank": true,
            "all_frames": true
        }
    ]
}
